"Enter n:" | print;
input | to-num | local n | rand | add 1 | local x;
local guess;
0 | local guesses;

true | while {} {
	$guesses | add 1 | var guesses;
	"Guess a number between 1 and ${n}." | print;
	input | to-num | var guess;
	$guess | neq $x | if [] {
		if [$guess | le $x] {
			"Too low!" | print;
		} -else {
			"Too high!" | print;
		};
	} -else {
		"You got it in $guesses guesses!" | print;
	}
}